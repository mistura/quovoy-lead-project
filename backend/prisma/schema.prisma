datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Lead {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  status    Status   @default(NEW)
  createdAt DateTime @default(now())
}

enum Status {
  NEW
  ENGAGED
  PROPOSAL_SENT
  CLOSED_WON
  CLOSED_LOST
}